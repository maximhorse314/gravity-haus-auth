{
    "name": "@gravity-haus/gh-auth",
    "engines": {
        "node": "=16"
    },
    "scripts": {
        "build-swagger": "ts-node src/scripts/build-swagger/build-swagger.ts",
        "start": "nodemon --watch 'src/**' --ext 'ts,json' --ignore 'src/**/*.spec.ts' --exec 'ts-node src/index.ts'",
        "format-with-error": "prettier --list-different \"src/**/*.ts\"",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "tslint -p tsconfig.json",
        "clean-code": "npm run format && npm run lint",
        "build": "rm -rf ./dist && node_modules/typescript/bin/tsc && cp ./Makefile ./dist/ && cp ./package.json ./dist && npm run build-swagger",
        "watch": "node_modules/typescript/bin/tsc -w --preserveWatchOutput",
        "sam:api": "sam local start-api -p 9000 --debug --env-vars env.json --skip-pull-image --warm-containers EAGER",
        "sam:build": "npm run build && sam build FaasFunction --cached --parallel -t ./template.qa.yaml",
        "sam:start": "npm run build && npm run sam:build && npm run sam:api",
        "sam:invoke": "npm run build && sam build --cached --parallel $npm_config_cron && sam local invoke --debug --skip-pull-image --env-vars env.json $npm_config_cron",
        "test": "NODE_ENV=test jest --coverage --runInBand",
        "test:watch": "NODE_ENV=test jest --watch --runInBand",
        "test:ci": "NODE_ENV=test jest --ci --runInBand --reporters=default --reporters=jest-junit --verbose --coverage",
        "prepare": "husky install",
        "db:migrate": "npm run db:migrate:dev && npm run db:migrate:test",
        "db:migrate:test": "npx sequelize db:migrate --env test",
        "db:migrate:dev": "npx sequelize db:migrate",
        "db:migrate:undo": "npm run db:migrate:undo:dev --name=$npm_config_name && npm run db:migrate:undo:test --name=$npm_config_name",
        "db:migrate:undo:test": "npx sequelize db:migrate:undo --name=$npm_config_name --env test",
        "db:migrate:undo:dev": "npx sequelize db:migrate:undo --name=$npm_config_name",
        "db:reset": "npx sequelize db:seed --seed reset-db && npm run db:migrate",
        "secret:read:dev": "ENV='dev' npx ts-node src/scripts/aws/sm/get-secret-value/get-secret-value.ts",
        "secret:read:stage": "ENV='stage' npx ts-node src/scripts/aws/sm/get-secret-value/get-secret-value.ts",
        "secret:read:prod": "ENV='prod' npx ts-node src/scripts/aws/sm/get-secret-value/get-secret-value.ts",
        "secret:update:dev": "ENV='dev' npx ts-node src/scripts/aws/sm/update-secret/update-secret.ts",
        "secret:update:stage": "ENV='stage' npx ts-node src/scripts/aws/sm/update-secret/update-secret.ts",
        "secret:update:prod": "ENV='prod' npx ts-node src/scripts/aws/sm/update-secret/update-secret.ts"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.110",
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.17",
        "@types/jest": "^28.1.1",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/node": "^18.0.0",
        "@types/sequelize": "^4.28.14",
        "@types/uuid": "^8.3.4",
        "@types/validator": "^13.7.3",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "body-parser": "^1.20.2",
        "concurrently": "^7.2.1",
        "dotenv": "^16.0.3",
        "esbuild-jest": "^0.5.0",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "express": "^4.18.2",
        "fishery": "^2.2.2",
        "http-request-mock": "^1.7.17",
        "jest": "^28.1.1",
        "jest-junit": "^13.2.0",
        "node-async-exec": "^1.2.0",
        "nodemon": "^2.0.16",
        "prettier": "^2.6.2",
        "sequelize-cli": "^5.5.1",
        "ts-jest": "^28.0.4",
        "ts-node": "^10.8.1",
        "ts-node-dev": "^2.0.0",
        "tsc-watch": "^5.0.3",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "husky": "^8.0.1",
        "@aws-sdk/client-secrets-manager": "^3.212.0",
        "@aws-sdk/client-sns": "^3.218.0",
        "@gravity-haus/gh-common": "1.1.13",
        "@types/cors": "^2.8.13",
        "@types/dotenv": "^8.2.0",
        "axios": "^1.1.3",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "docusign-esign": "^5.19.0",
        "esbuild": "^0.14.14",
        "js-yaml": "^4.1.0",
        "jsonwebtoken": "^8.5.1",
        "mockdate": "^3.0.5",
        "mysql2": "^2.3.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.21.0",
        "sequelize-typescript": "^2.1.3",
        "uuid": "^9.0.0"
    }
}
